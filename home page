    <!-- 導航選單 -->
    <nav class="navbar" id="navbar">
        <div class="nav-container">
            <!-- Logo -->
            <a href="index.html" class="logo">
                <!-- 多種路徑嘗試，請選擇能正常顯示的一種 -->
                <img src="assets/logo.png" alt="Logo" id="logo-img" 
                     onerror="this.src='./assets/logo.png'; this.onerror=function(){this.src='https://你的用戶名.github.io/repository名稱/assets/logo.png'; this.onerror=null;}">
            </a>

            <!-- 導航選單 -->
            <ul class="nav-menu" id="nav-menu">
                <li class="nav-item">
                    <a href="project.html" class="nav-link">Project</a>
                </li>
                <li class="nav-item">
                    <a href="about.html" class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    <a href="contact.html" class="nav-link">Contact</a>
                </li>
            </ul>

            <!-- 手機版漢堡選單 -->
            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
